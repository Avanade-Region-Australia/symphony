{
	"name": "Lucidity",
	"postCreateCommand": "bash /home/vscode/.lucidity/postlaunch.sh",
	"workspaceFolder" : "/home/vscode/repos/Terraform-Code",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/repos/Terraform-Code,type=bind,consistency=delegated",	
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "focal" }
	},

	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash"
	},
  	"extensions": ["HashiCorp.terraform","mikestead.dotenv"],
	"remoteUser": "vscode"
}